<p id="notice"><%= notice %></p>

<h1>Surveys</h1>

<div>
  <%= link_to 'New Survey', new_survey_path %>
  <hr>
</div>

<div class="container">

  <div class="card" style="width: 40rem">
    <h2 class="card-header"> Survey Results </h2>
    
    <div class="card-body">
    	 <%= pie_chart @survey_results %>
    </div>
  </div>

</div>


<hr>
<% if session[:username] == "testweinmans" %> 
	

  <div class="tbl">
    <table>
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th colspan="2">Smoothiechoice</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @surveys.order('updated_at DESC').each do |survey| %>
          <tr>
            <td><%= survey.first_name %></td>
            <td><%= survey.last_name %></td>
            <td><%= image_tag(Smoothiechoice.find_by_id(survey.smoothiechoice_id).photo, height: "100", width: "150") %></td>
            <td><%= Smoothiechoice.find_by_id(survey.smoothiechoice_id).name %></td>
            <td><%= link_to 'Show', survey %></td>
            <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
            <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<% end%>

<br>

<div>
    <%# @survey_results  %>
</div>

